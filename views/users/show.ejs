<!DOCTYPE html>
<html>
  <head>
    <%- include('../partials/head') %>
  </head>
  <body>
    <%- include('../partials/nav') %>

    <div class="container mb-3">
      <h3 class="contentBoxTop"><%= user.username %></h3>

      <form action="/users" method="post" class="user-form">
        <fieldset disabled>
          <div class="form-group row">
            <label for="name" class="col-sm-3 col-form-label">Name</label>
            <div class="col-sm-9">
              <input type="text" name="name" id="name" value="<%= user.name %>" class="form-control" />
            </div>
          </div>
          <div class="form-group row">
            <label for="email" class="col-sm-3 col-form-label">Email</label>
            <div class="col-sm-9">
              <input type="text" name="email" id="email" value="<%= user.email %>" class="form-control" />
            </div>
          </div>
        </fieldset>
      </form>

      <div>
        <a href="/users" class="btn btn-primary">Back</a>
        <a href="/users/<%= user.username %>/edit" class="btn btn-primary">Edit</a>
        <form action="/users/<%= user.username %>?_method=delete" method="post" class="d-inline">
          <a href="javascript:void(0)" onclick="confirm('Do tou want to delete this?')?this.parentElement.submit():null;" class="btn btn-primary">Delete</a>
        </form>
      </div>
    </div>
  </body>
</html>
